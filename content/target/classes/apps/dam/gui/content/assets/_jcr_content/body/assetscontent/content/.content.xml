<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <contentpath
            jcr:primaryType="nt:unstructured"
            sling:resourceType="dam/gui/components/admin/endor/contentpath"/>
        <childassets
            granite:rel="cq-damadmin-admin-childpages"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container"
            class="show-after-card-layout hide"
            itemscope="{Boolean}true">
            <granite:data
                jcr:primaryType="nt:unstructured"
                foundation-mode-group="cq-damadmin-admin-childpages"/>
            <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/multilayouts"
                layout="${state[&quot;cq.assets.childassets.layoutId&quot;].string}"
                skipEmpty="columns">
                <layouts jcr:primaryType="nt:unstructured">
                    <card
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/cardview"
                        itemprop="item"
                        layoutId="card"
                        limit="{Long}20"
                        maximized="{Boolean}true"
                        path="${requestPathInfo.suffix}"
                        selectionMode="${state[&quot;cq.assets.childassets.selectionMode&quot;].boolean}"
                        src="/mnt/overlay/dam/gui/content/assets/jcr:content/body/assetscontent/content/items/childassets{.offset,limit}.html{+id}"
                        stateId="cq.assets.childassets"/>
                    <list
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/listview"
                        itemprop="item"
                        layoutId="list"
                        limit="{Long}20"
                        maximized="{Boolean}true"
                        path="${requestPathInfo.suffix}"
                        src="/mnt/overlay/dam/gui/content/assets/jcr:content/body/assetscontent/content/items/childassets{.offset,limit}.html{+id}"
                        stateId="cq.assets.childassets">
                        <headerdatasource
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/siteadmin/admin/listview/columns/datasources/columndatasource"
                            availableColumns="/mnt/overlay/dam/gui/content/commons/listview/assetsavailablecolumns"
                            class="card-asset"
                            moveable="{Boolean}true"
                            selectable="{Boolean}true"/>
                    </list>
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/columnview"
                        itemprop="item"
                        itemResourceType="dam/gui/components/admin/layouts/column/assetcolumnitem"
                        layoutId="columns"
                        limit="{Long}40"
                        loadParents="{Boolean}true"
                        multiselect="{Boolean}true"
                        path="${requestPathInfo.suffix}"
                        rootPath="/content/dam"
                        src="/mnt/overlay/dam/gui/content/assets/miller/columnview{.offset,limit}.html{+path}"
                        stateId="cq.assets.childassets">
                        <preview
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/gui/components/admin/layouts/column/assetcolumnpreview"
                            path="${requestPathInfo.suffix}"/>
                    </columns>
                </layouts>
                <empty
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="dam/gui/components/admin/pages/emptypagecontent"
                    path="${requestPathInfo.suffix}">
                    <actions
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/include"
                        path="dam/gui/content/assets/jcr:content/body/assetscontent/header/items/default/items/fileupload"/>
                </empty>
            </layout>
            <datasource
                jcr:primaryType="nt:unstructured"
                sling:resourceType="dam/gui/components/commons/datasources/assetsdatasource"
                com.adobe.cq.item.quickActions="true"
                itemResourceType="dam/gui/components/admin/childasset"
                limit="${empty requestPathInfo.selectors[1] ? &quot;20&quot; : requestPathInfo.selectors[1]}"
                offset="${requestPathInfo.selectors[0]}"/>
        </childassets>
        <createlightbox
            jcr:primaryType="nt:unstructured"
            sling:resourceType="dam/gui/components/admin/collections/createlightbox"/>
        <configureColumnsModal
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/include"
            path="/mnt/overlay/dam/gui/content/commons/listview/assetsconfigurecolumnsmodal/content"/>
    </items>
</jcr:root>
